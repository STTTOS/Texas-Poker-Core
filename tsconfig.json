{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "sourceMap": true,
    "outDir": "./types",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2017",
    "noImplicitAny": false,
    "module": "commonJS",
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["src", "global.env.d.ts"]
}
